<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:id="@+id/notification_album"
            android:src="@drawable/album_default"
            android:scaleType="centerCrop"/>
    <RelativeLayout
            android:id="@+id/notification_info"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="64dp"
            android:layout_toRightOf="@id/notification_album">
        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">
            <TextView
                    android:id="@+id/notification_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textSize="18sp"
                    style="@style/NotificationTitle"
                    android:text="@string/song_title_default"/>
            <TextView
                    android:id="@+id/notification_artist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/notification_title"
                    android:singleLine="true"
                    android:textSize="14sp"
                    style="@style/NotificationText"
                    android:text="@string/artist_name_default"/>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="16dp"
            android:layout_alignParentRight="true">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true">
            <ImageButton
                    android:id="@+id/notification_next_button"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/icon_next"
                    android:scaleType="centerCrop"
                    android:background="@drawable/drawer_list_selector"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>